{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mixcore/api": ["packages/api/src"],
      "@mixcore/shared": ["packages/shared/src"],
      "@mixcore/config": ["packages/config/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
